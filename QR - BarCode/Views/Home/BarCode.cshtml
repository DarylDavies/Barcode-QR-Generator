@{
    ViewData["Title"] = " ";
}
<div class="jumbotron">
    <br />
    <form asp-controller="Home" asp-action="BarCode">
        <h2>Generate Bar Code</h2>
        <div class="row">
            <div class="col-leg-12"></div>
            <div class="col-lg-12">

                <div class="col-leg-12">Enter Bar Code String </div>
                <br />
                <div class="col-leg-12">
                    <input type="text" name="barcode" id="textCode" class="form-control" />
                </div>
                <br /><br />
                <div class="col-leg-12">
                    <input type="submit" value="Generate Bar Code" class="btn btn-primary" />
                </div>
                <br />
                <br />
    </form>
    @if (ViewBag.BarcodeImage != null)
    {
        <img src="@ViewBag.BarcodeImage" alt="" />
    }
    <hr />
</div>

    

