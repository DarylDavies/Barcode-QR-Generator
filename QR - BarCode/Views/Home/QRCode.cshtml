
@{
    ViewData["Title"] = " ";
}
<div class="jumbotron">
    <br />
    <form asp-controller="Home" asp-action="QRCode">
        <h2>Generate QR Code</h2>
        <div class="row">
            <div class="col-leg-12"></div>
            <div class="col-lg-12">
                <div class="col-leg-12">Enter QR Code String </div>
                <br />
                <div class="col-leg-12">
                    <input type="text" name="QRCodeString" id="QRCodeString" class="form-control" />
                </div>
                <br />
                <br />
                <div class="col-leg-12">
                    <input type="submit" value="Generate QR Code" class="btn btn-primary" />
                </div>
                <br />
                <br />

    </form>
    @if (!string.IsNullOrEmpty(ViewBag.URL))
    {
        <div class="col-lg-12">
            <img src="@ViewBag.URL" />
        </div>
    }
    <br/>
    <div class="col-leg-12">
        <a href="/Home/ReadQRCode">Read Image and show text</a>
    </div>
    <br/>
    @if (!string.IsNullOrEmpty(ViewBag.Text))
    {
        <div class="col-lg-12">
            QR Code into text -> @ViewBag.Text
        </div>
    }
    <hr />
</div>
